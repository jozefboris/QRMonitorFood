<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">



    <Button
        android:text="Prihlásiť sa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openLogin"
        />

    <Button
        android:text="Skenovať potravinu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openScan"
        />

    <Button
        android:text="Generovat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openGenerator"
        />

    <Button
        android:text="Pridat produkt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openAddProduct"
        />

    <Button
        android:text="O produkte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openAboutProduct"
        />

    <Button
        android:text="Try"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="openTry"
        />

</LinearLayout>